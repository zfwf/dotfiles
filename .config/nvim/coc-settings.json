{
  "list.source.files.defaultOptions": ["--ignore-case"],
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": ["**/.git/**", "**/node_modules/**"],
  "list.source.mru.ignoreGitIgnore": false,
  "list.source.grep.defaultOptions": ["--interactive"],
  "list.source.grep.args": ["--hidden", "--smart-case"],
  "list.source.grep.excludePatterns": ["**/.git/**", "**/node_modules/**"],
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "python",
    "typescript",
    "typescriptreact",
    "xhtml",
    "html",
    "json",
    "jsonc",
    "scala"
  ],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.hoverTarget": "preview",
  "python.jediEnabled": false,
  "diagnostic.messageTarget": "float"
}
